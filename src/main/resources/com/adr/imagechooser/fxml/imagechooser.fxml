<?xml version="1.0" encoding="UTF-8"?>

<?import com.adr.awesomeicon.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root focusTraversable="true" onKeyPressed="#keyPressedAction" onMouseClicked="#clickedAction" onMouseEntered="#mouseEnterAction" onMouseExited="#mouseExitAction" styleClass="scroll-pane" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane fx:id="imagepane" prefHeight="250.0" prefWidth="250.0">
         <children>
            <ImageView fx:id="imageview" pickOnBounds="true" preserveRatio="true" />
         </children>
      </StackPane>
      <HBox fx:id="toolbar" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#chooseAction">
               <graphic>
                  <Icon icon="FOLDER_O" />
               </graphic></Button>
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#clearAction">
               <graphic>
                  <Icon icon="TRASH" />
               </graphic></Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</fx:root>
